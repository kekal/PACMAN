<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="PACMAN.Ghost1"
	x:Name="UserControl" 
	>

    <Grid x:Name="LayoutRoot">
        <Path Data="M0,0 M 100,100 " Stretch="Fill"     Stroke="Red" Fill="#FFD0ACAC"    />

        <Ellipse Fill="Yellow" Width="100" Height="100"  />
        <Path Data="M0,0 M100,100 M50,50 L101,25 101,75" Fill="Black" RenderTransformOrigin="0.5,0.5"  />

    </Grid>
</UserControl>